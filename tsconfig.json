{
  "compilerOptions": {

    "target": "ES2020",                                  
    "module": "NodeNext",                                
    "moduleResolution": "NodeNext",                        
    "outDir": "./dist",                                  
    "rootDir": "./src",                                 
    "esModuleInterop": true,                             
    "verbatimModuleSyntax": false,                       
    "resolveJsonModule": true,                           
    "strict": true,
    "skipLibCheck": true,                                
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
